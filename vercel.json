{
  "version": 2,
  "outputDirectory": ".",
  "installCommand": "npm install",
  "buildCommand": "echo 'No build step required'",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ]
}